@model Anime
@{
    ViewData["Title"] = "Details";
}

<div class="card border-success rounded-4 mt-5 overflow-hidden" >
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-8 px-5 py-4 d-flex flex-column justify-content-between">
                <div>
                    <div class="d-flex justify-content-between align-items-center">
                        <h1 class="text-success fw-bolder" style="padding:0px">@Model.Name</h1>
                       <div>
                            @if (Model.Rate > 0)
                            {
                                @for (int i = 0; i < Model.Rate; i++)
                                {
                                    <i class="bi bi-star-fill text-light" style="font-size:25px"></i>
                                }
                            }
                            else{

                                <i class="bi bi-star text-light" style="font-size:25px"></i>
                            }
                       </div>
                    </div>
                    <p class="fs-5 mt-3">@Model.Description</p>  
                </div>
                <div>
                    @foreach (var animecategory in Model.AnimeCategories)
                    {
                        <span class="badge rounded-pill bg-primary" style="width: fit-content;height:40px;padding:10px; font-size:20px">@animecategory.Category.Name</span>
                    }
                </div>
            </div>
            <div class="col-md-4">
                <img src="@($"{FileSetting.ImagesPath}/{Model.Image}")" alt="@Model.Name"  style="width:100%;height:100%;"/>
            </div>
        </div>
    </div>
</div>
